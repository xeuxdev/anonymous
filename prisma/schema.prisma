generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userName String

  messageLink String? @default(cuid())

  messages Messages[]

  @@map("users")
}

model Messages {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  messageLink String @db.ObjectId
  user        User   @relation(fields: [messageLink], references: [id], onDelete: Cascade)

  @@map("messages")
}
